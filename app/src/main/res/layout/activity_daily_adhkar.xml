<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_forest_adhkar_list"
        android:orientation="vertical"
        tools:context=".activities.DailyAdhkarActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="255dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:elevation="11dp"
                app:cardBackgroundColor="#0000FFFF"
                app:cardCornerRadius="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Astagfirullah"
                        android:textColor="#C0A2B0"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/play1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="11dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_play"
                        android:backgroundTint="#C1A3B1"
                        android:contentDescription="Play the sound" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:elevation="11dp"
                app:cardBackgroundColor="#0000FFFF"
